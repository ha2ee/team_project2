<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">

<!-- 리절트 맵 정의 -->
	<resultMap id="memberResult" type="memberVO">
	   <result property="user_name" column="user_name" />
	   <result property="user_email" column="user_email" />
	   <result property="user_pw" column="user_pw" />
	   <result property="user_regdate" column="user_regdate" />
	   <result property="user_update" column="user_update" />
	   <result property="seller_level_id" column="seller_level_id" />
	   
	</resultMap>
	
  	<resultMap id="AsksResult" type="AsksVO">
	   <result property="asks_idx" column="asks_idx" />
	   <result property="asks_size_idx" column="asks_size_idx" />
     <result property="asks_price" column="asks_price" />
	   <result property="asks_regdate" column="asks_regdate" />
	   <result property="asks_update" column="asks_update" />
	   <result property="asks_expiration" column="asks_expiration" />
	   <result property="asks_order_state_idx" column="asks_order_state_idx" />
     <result property="asks_matched_date" column="asks_matched_date" />
     <result property="asks_total_price" column="asks_total_price" />
     <result property="asks_order_number" column="asks_order_number" />
     <result property="asks_address" column="asks_address" />
	</resultMap>	
	
  <resultMap id="BidsResult" type="BidsVO">
    <result property="bids_idx" column="bids_idx" />
    <result property="bids_size_idx" column="bids_size_idx" />
    <result property="bids_price" column="bids_price" />
    <result property="bids_regdate" column="bids_regdate" />
    <result property="bids_update" column="bids_update" />
    <result property="bids_expiration" column="bids_expiration" />
    <result property="bids_order_state_idx"
      column="bids_order_state_idx" />
    <result property="bids_matched_date"
      column="bids_matched_date" />
    <result property="bids_total_price" column="bids_total_price" />
    <result property="bids_order_number"
      column="bids_order_number" />
    <result property="bids_ship_idx" column="bids_ship_idx" />
  </resultMap>

<!-- 로그인시 입력한 아이디와 비밀번호 값에 해당하는 정보를 테이블에서 조회  -->
<!-- (남은 응모횟수)d_cnt의 값을 조회한다. -->
    <!-- 로그인시 입력한 아이디 , 비밀번호 값에 해당하는 정보를 테이블에서 조회!!
    	 조회가 되면 입력한 아이디 또는 비밀번호가  DB의 테이블에 저장되어 있다는 뜻이므로 
      -->
	<select id="login" resultType="memberVO"  parameterType="java.util.Map"  >
	    <![CDATA[
			select * from users 
			 where user_email=#{user_email}
			 and user_pw=#{user_pw}			
			 
		]]>
	</select>
	
  <insert id="insertNewMember" parameterType="memberVO">
        <![CDATA[
          insert into users(user_name,
                        user_email,
                        user_pw,
                        seller_level_id)
                      values(#{user_name},
                            #{user_email},
                            #{user_pw},
                            #{seller_level_id})
      ]]>      
   </insert>
   
	<!-- 이메일 중복확인 -->
	<select id="emailCheck" parameterType="map" resultType="map">
		<![CDATA[
			select nvl(user_email,0) USER_EMAIL from(
			select * from users
			where user_email=#{user_email1})
			right outer join dual
			on user_email = #{user_email2}
		]]>
	</select>
	
	<select id="checkbids" resultType="BidsVO"  parameterType="java.util.List"  >
	    <![CDATA[
			select * from bids 
			 where bids_user_email=#{id}	
			 
		]]>
	</select>
	
	<select id="checkasks" resultType="AsksVO"  parameterType="java.util.List"  >
	    <![CDATA[
			select * from asks 
			 where asks_user_email=#{id}	
			 
		]]>
	</select>

</mapper>
